<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="so_arm">

  <!-- Define constants -->
  <xacro:property name="PI" value="3.14159265359" />

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.05"/>
      </geometry>
      <material name="base_material">
        <color rgba="0.7 0.7 0.7 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Link 1 (Shoulder) -->
  <link name="link_1">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.15"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.075"/>
      <material name="link_material">
        <color rgba="0.8 0.2 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03" length="0.15"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.075"/>
    </collision>
    <inertial>
      <mass value="1.5"/>
      <origin xyz="0 0 0.075"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Joint 1 (Shoulder - Z rotation) -->
  <joint name="shoulder_pan_joint" type="revolute">
    <parent link="base_link"/>
    <child link="link_1"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-${PI}" upper="${PI}" effort="100.0" velocity="1.5"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- Link 2 (Upper Arm) -->
  <link name="link_2">
    <visual>
      <geometry>
        <cylinder radius="0.025" length="0.20"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.1"/>
      <material name="link_material">
        <color rgba="0.2 0.8 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.025" length="0.20"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.1"/>
    </collision>
    <inertial>
      <mass value="1.2"/>
      <origin xyz="0 0 0.1"/>
      <inertia ixx="0.008" ixy="0.0" ixz="0.0" iyy="0.008" iyz="0.0" izz="0.0008"/>
    </inertial>
  </link>

  <!-- Joint 2 (Shoulder - Y rotation) -->
  <joint name="shoulder_lift_joint" type="revolute">
    <parent link="link_1"/>
    <child link="link_2"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-${PI/2}" upper="${PI/2}" effort="100.0" velocity="1.5"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- Link 3 (Lower Arm) -->
  <link name="link_3">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.18"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.09"/>
      <material name="link_material">
        <color rgba="0.2 0.2 0.8 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.02" length="0.18"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.09"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0.09"/>
      <inertia ixx="0.006" ixy="0.0" ixz="0.0" iyy="0.006" iyz="0.0" izz="0.0006"/>
    </inertial>
  </link>

  <!-- Joint 3 (Elbow) -->
  <joint name="elbow_joint" type="revolute">
    <parent link="link_2"/>
    <child link="link_3"/>
    <origin xyz="0 0 0.20" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-${PI}" upper="${PI}" effort="50.0" velocity="1.5"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- Link 4 (Wrist 1) -->
  <link name="link_4">
    <visual>
      <geometry>
        <cylinder radius="0.015" length="0.15"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.075"/>
      <material name="link_material">
        <color rgba="0.8 0.8 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.015" length="0.15"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.075"/>
    </collision>
    <inertial>
      <mass value="0.8"/>
      <origin xyz="0 0 0.075"/>
      <inertia ixx="0.004" ixy="0.0" ixz="0.0" iyy="0.004" iyz="0.0" izz="0.0004"/>
    </inertial>
  </link>

  <!-- Joint 4 (Wrist Rotation - Z) -->
  <joint name="wrist_1_joint" type="revolute">
    <parent link="link_3"/>
    <child link="link_4"/>
    <origin xyz="0 0 0.18" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-${PI}" upper="${PI}" effort="30.0" velocity="2.0"/>
    <dynamics damping="0.05" friction="0.05"/>
  </joint>

  <!-- Link 5 (Wrist 2) -->
  <link name="link_5">
    <visual>
      <geometry>
        <cylinder radius="0.015" length="0.15"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.075"/>
      <material name="link_material">
        <color rgba="0.8 0.2 0.8 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.015" length="0.15"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.075"/>
    </collision>
    <inertial>
      <mass value="0.8"/>
      <origin xyz="0 0 0.075"/>
      <inertia ixx="0.004" ixy="0.0" ixz="0.0" iyy="0.004" iyz="0.0" izz="0.0004"/>
    </inertial>
  </link>

  <!-- Joint 5 (Wrist - Y rotation) -->
  <joint name="wrist_2_joint" type="revolute">
    <parent link="link_4"/>
    <child link="link_5"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-${PI/2}" upper="${PI/2}" effort="30.0" velocity="2.0"/>
    <dynamics damping="0.05" friction="0.05"/>
  </joint>

  <!-- Link 6 (End Effector Mount) -->
  <link name="link_6">
    <visual>
      <geometry>
        <box size="0.04 0.04 0.04"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.02"/>
      <material name="end_effector_material">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.04 0.04 0.04"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.02"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0.02"/>
      <inertia ixx="0.0002" ixy="0.0" ixz="0.0" iyy="0.0002" iyz="0.0" izz="0.0002"/>
    </inertial>
  </link>

  <!-- Joint 6 (Wrist - Z rotation) -->
  <joint name="wrist_3_joint" type="revolute">
    <parent link="link_5"/>
    <child link="link_6"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-${PI}" upper="${PI}" effort="20.0" velocity="2.0"/>
    <dynamics damping="0.05" friction="0.05"/>
  </joint>

  <!-- Camera Link -->
  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.03"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="camera_material">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.05 0.03"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Camera Joint -->
  <joint name="camera_joint" type="fixed">
    <parent link="link_6"/>
    <child link="camera_link"/>
    <origin xyz="0.03 0 0.04" rpy="0 0 0"/>
  </joint>

  <!-- Camera Optical Frame -->
  <link name="camera_optical_frame"/>

  <joint name="camera_optical_joint" type="fixed">
    <parent link="camera_link"/>
    <child link="camera_optical_frame"/>
    <origin xyz="0 0 0" rpy="${-PI/2} 0 ${-PI/2}"/>
  </joint>

</robot>
