<?xml version="1.0"?>
<robot name="so_arm101">
  <!-- Base Link -->
  <link name="world"/>
  
  <link name="base_link">
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.04"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>
  
  <joint name="world_to_base" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
  </joint>

  <!-- Joint 1: Base (회전) -->
  <link name="joint1_link">
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.015"/>
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="joint1_link"/>
    <axis xyz="0 0 1"/>
    <limit lower="${-pi}" upper="${pi}" effort="10" velocity="1"/>
    <origin xyz="0.0 0.0 0.04" rpy="0 0 0"/>
  </joint>

  <!-- Link 1: 첫 번째 팔 -->
  <link name="link1">
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.001"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.15" radius="0.01"/>
      </geometry>
      <origin xyz="0.0 0.0 0.075" rpy="0 0 0"/>
      <material name="green">
        <color rgba="0.0 1.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="joint2" type="revolute">
    <parent link="joint1_link"/>
    <child link="link1"/>
    <axis xyz="0 1 0"/>
    <limit lower="${-pi/2}" upper="${pi/2}" effort="10" velocity="1"/>
    <origin xyz="0.0 0.0 0.04" rpy="0 0 0"/>
  </joint>

  <!-- Link 2: 두 번째 팔 -->
  <link name="link2">
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.001"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.15" radius="0.01"/>
      </geometry>
      <origin xyz="0.0 0.0 0.075" rpy="0 0 0"/>
      <material name="cyan">
        <color rgba="0.0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="joint3" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <axis xyz="0 1 0"/>
    <limit lower="${-pi/2}" upper="${pi/2}" effort="10" velocity="1"/>
    <origin xyz="0.0 0.0 0.15" rpy="0 0 0"/>
  </joint>

  <!-- Wrist Roll -->
  <link name="wrist_roll_link">
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.002"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.01"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="joint4" type="revolute">
    <parent link="link2"/>
    <child link="wrist_roll_link"/>
    <axis xyz="0 0 1"/>
    <limit lower="${-pi}" upper="${pi}" effort="5" velocity="1"/>
    <origin xyz="0.0 0.0 0.15" rpy="0 0 0"/>
  </joint>

  <!-- Wrist Pitch -->
  <link name="wrist_pitch_link">
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.002"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.08" radius="0.01"/>
      </geometry>
      <material name="yellow">
        <color rgba="1.0 1.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="joint5" type="revolute">
    <parent link="wrist_roll_link"/>
    <child link="wrist_pitch_link"/>
    <axis xyz="0 1 0"/>
    <limit lower="${-pi}" upper="${pi}" effort="5" velocity="1"/>
    <origin xyz="0.0 0.0 0.04" rpy="0 0 0"/>
  </joint>

  <!-- End Effector / Gripper -->
  <link name="gripper_base_link">
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.04 0.04 0.05"/>
      </geometry>
      <origin xyz="0.0 0.0 0.025" rpy="0 0 0"/>
      <material name="magenta">
        <color rgba="1.0 0.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="joint6" type="revolute">
    <parent link="wrist_pitch_link"/>
    <child link="gripper_base_link"/>
    <axis xyz="0 0 1"/>
    <limit lower="${-pi}" upper="${pi}" effort="5" velocity="1"/>
    <origin xyz="0.0 0.0 0.08" rpy="0 0 0"/>
  </joint>

  <!-- Tool / Gripper Finger Left -->
  <link name="gripper_left_finger">
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0005" ixy="0.0" ixz="0.0" iyy="0.0005" iyz="0.0" izz="0.0005"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.01 0.015 0.04"/>
      </geometry>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <material name="orange">
        <color rgba="1.0 0.5 0.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="gripper_left_finger_joint" type="prismatic">
    <parent link="gripper_base_link"/>
    <child link="gripper_left_finger"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.03" upper="0.0" effort="2" velocity="0.5"/>
    <origin xyz="0.01 0.0 0.0" rpy="0 0 0"/>
  </joint>

  <!-- Gripper Finger Right -->
  <link name="gripper_right_finger">
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0005" ixy="0.0" ixz="0.0" iyy="0.0005" iyz="0.0" izz="0.0005"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.01 0.015 0.04"/>
      </geometry>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <material name="orange">
        <color rgba="1.0 0.5 0.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="gripper_right_finger_joint" type="prismatic">
    <parent link="gripper_base_link"/>
    <child link="gripper_right_finger"/>
    <axis xyz="-1 0 0"/>
    <limit lower="-0.03" upper="0.0" effort="2" velocity="0.5"/>
    <origin xyz="-0.01 0.0 0.0" rpy="0 0 0"/>
  </joint>

  <!-- Tool Frame (TCP) -->
  <link name="tool_frame"/>

  <joint name="tool_joint" type="fixed">
    <parent link="gripper_base_link"/>
    <child link="tool_frame"/>
    <origin xyz="0.0 0.0 0.05" rpy="0 0 0"/>
  </joint>

  <!-- Camera Frame -->
  <link name="camera_link">
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.03 0.03 0.03"/>
      </geometry>
      <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="gripper_base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.0 0.0 0.06" rpy="0 0 0"/>
  </joint>

  <!-- Materials -->
  <material name="gray">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>
  <material name="blue">
    <color rgba="0.0 0.0 1.0 1.0"/>
  </material>
  <material name="green">
    <color rgba="0.0 1.0 0.0 1.0"/>
  </material>
  <material name="cyan">
    <color rgba="0.0 1.0 1.0 1.0"/>
  </material>
  <material name="red">
    <color rgba="1.0 0.0 0.0 1.0"/>
  </material>
  <material name="yellow">
    <color rgba="1.0 1.0 0.0 1.0"/>
  </material>
  <material name="magenta">
    <color rgba="1.0 0.0 1.0 1.0"/>
  </material>
  <material name="orange">
    <color rgba="1.0 0.5 0.0 1.0"/>
  </material>
  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
</robot>
